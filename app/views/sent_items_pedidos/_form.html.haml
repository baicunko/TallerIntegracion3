= form_for @sent_items_pedido, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :sku, :class => 'control-label'
    .controls
      = f.text_field :sku, :class => 'text_field'
  .control-group
    = f.label :cantidad, :class => 'control-label'
    .controls
      = f.text_field :cantidad, :class => 'text_field'
  .control-group
    = f.label :precio, :class => 'control-label'
    .controls
      = f.text_field :precio, :class => 'text_field'
  .control-group
    = f.label :direccion, :class => 'control-label'
    .controls
      = f.text_field :direccion, :class => 'text_field'
  .control-group
    = f.label :pedidoid, :class => 'control-label'
    .controls
      = f.text_field :pedidoid, :class => 'text_field'
  .control-group
    = f.label :respuesta, :class => 'control-label'
    .controls
      = f.text_field :respuesta, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sent_items_pedidos_path, :class => 'btn'
