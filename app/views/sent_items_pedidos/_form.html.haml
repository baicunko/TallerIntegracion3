= form_for @sent_items_pedido do |f|
  - if @sent_items_pedido.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sent_items_pedido.errors.count, "error")} prohibited this sent_items_pedido from being saved:"
      %ul
        - @sent_items_pedido.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sku
    = f.number_field :sku
  .field
    = f.label :cantidad
    = f.number_field :cantidad
  .field
    = f.label :precio
    = f.number_field :precio
  .field
    = f.label :direccion
    = f.text_field :direccion
  .field
    = f.label :pedidoid
    = f.number_field :pedidoid
  .field
    = f.label :respuesta
    = f.check_box :respuesta
  .actions
    = f.submit 'Save'
