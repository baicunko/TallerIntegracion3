- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sku)
      %th= model_class.human_attribute_name(:precio)
      %th= model_class.human_attribute_name(:fecha_actualizacion)
      %th= model_class.human_attribute_name(:fecha_vigencia)
      %th= model_class.human_attribute_name(:costo_producto)
      %th= model_class.human_attribute_name(:costo_traspaso)
      %th= model_class.human_attribute_name(:direccion)
      %th= model_class.human_attribute_name(:store_id)
      %th= model_class.human_attribute_name(:despachado)
      %th= model_class.human_attribute_name(:costo_almacenamiento)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.id, product_path(product)
        %td= product.sku
        %td= product.precio
        %td= product.fecha_actualizacion
        %td= product.fecha_vigencia
        %td= product.costo_producto
        %td= product.costo_traspaso
        %td= product.direccion
        %td= product.store_id
        %td= product.despachado
        %td= product.costo_almacenamiento
        %td=l product.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(product), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary'
