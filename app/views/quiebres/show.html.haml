- model_class = Quiebre
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:pedido) + ':'
  %br
  = @quiebre.pedido
%p
  %strong= model_class.human_attribute_name(:nombrecliente) + ':'
  %br
  = @quiebre.nombrecliente
%p
  %strong= model_class.human_attribute_name(:fechaquiebre) + ':'
  %br
  = @quiebre.fechaquiebre

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), quiebres_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_quiebre_path(@quiebre), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), quiebre_path(@quiebre), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
